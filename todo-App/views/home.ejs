<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <script
      src="https://kit.fontawesome.com/92695f0e91.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="home.css" />
    <title><%= title %></title>
  </head>
  <body class="body_color">
    <div class="container-fluid">
      <h1 class="text-center text-muted"><%= title %></h1>
    </div>
    <form action="/create-task" method="POST">
      <table class="table table-bordered border-secondary">
        <thead>
          <tr>
            <th colspan="2" class="text-muted">
              DESCRIPTION
              <p>
                <input
                  type="text"
                  class="input-type"
                  name="description"
                  placeholder="What do you need to do?"
                  required
                />
              </p>
            </th>
          </tr>
          <tr>
            <th scope="col" class="text-muted">
              CATEGORY<br />
              <select
                name="category"
                class="form-select form-select-md mb-3 category"
                aria-label=".form-select-md example"
                required
              >
                <option selected>Choose a Category</option>
                <option value="Personal">Personal</option>
                <option value="Work">Work</option>
                <option value="School">School</option>
                <option value="Cleaning">Cleaning</option>
                <option value="Other">Other</option>
              </select>
            </th>
            <th scope="col " class="text-muted">
              <div class="mb-3">DUE DATE</div>
              <input
                type="date"
                name="date"
                placeholder="dd-mm-yyyy"
                min="1900-01-01"
                max="2050-12-31"
                class="due_dated mb-4"
              />
            </th>
          </tr>
        </thead>
      </table>
      <br /><br />
      <div class="col text-center">
        <button type="submit" class="bg-dark fw-bolder btn rounded-2 shadow-lg">
          <i class="fa-solid fa-plus fa-lg" style="color: #eaeaec"
            >&nbsp; &nbsp;</i
          >ADD TASK</button
        >&nbsp;
        <!-- <button
          type="submit"
          formaction="/delete-task"
          class="btn bg-danger fw-bolder rounded-2"
        >
          <i class="fa-regular fa-trash-can fa-md" style="color: #ffffff"
            >&nbsp; &nbsp;</i
          >DELETE TASK
        </button> -->
      </div>
    </form>
    <br /><br />
    <hr />
    <!-- TODOS DATA  -->
    <div class="delete">
      <form action="/delete-task" method="get">
        <table class="table border-3">
          <% for(let i of task) { %>

          <tr>
            <td><input type="checkbox" id="check" name="<%= i._id %>" /></td>
            <td>
              <p id="task-description fs-3 "><%= i.description %></p>
              <i class="fa-regular fa-calendar-days"></i>&nbsp; &nbsp; <%= new
              Date().toDateString() %>
            </td>
            <td>
              <p id="task-category"><%= i.category %></p>
            </td>
          </tr>
          <!--  -->

          <% } %>
        </table>
        <div align="center">
        <button type="submit" class="btn bg-danger fw-bolder rounded-2">
          <i class="fa-regular fa-trash-can fa-md" style="color: #ffffff"
            >&nbsp; &nbsp;</i
          >DELETE TASK
        </button></div>
      </form>
    </div>
  </body>
</html>
